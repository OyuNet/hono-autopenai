{
  "name": "hono-autopenapi",
  "version": "0.1.1",
  "description": "Generate OpenAPI schema by statically analyzing Hono routes and c.json response types.",
  "type": "module",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "import": "./dist/cli.js"
    }
  },
  "bin": {
    "hono-autopenapi": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "prepare": "tsup",
    "dev": "tsup --watch",
    "check": "tsc --noEmit",
    "example": "node ./dist/cli.js --entries examples/**/*.ts --out openapi.json"
  },
  "keywords": [
    "hono",
    "openapi",
    "typescript",
    "static-analysis",
    "json-schema"
  ],
  "author": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OyuNet/hono-autopenapi.git"
  },
  "bugs": {
    "url": "https://github.com/OyuNet/hono-autopenapi/issues"
  },
  "homepage": "https://github.com/OyuNet/hono-autopenapi#readme",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "hono": "^4.5.0",
    "openapi-types": "^12.1.3",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "fast-glob": "^3.3.2"
  }
}
